<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>People Species Admin</title>
 
	<!-- SOURCE FOR DATA TABLE FILES : https://datatables.net/examples/styling/bootstrap4 -->
	
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">	
	<link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">	
	
			<script>
	
		$(document).ready(function() {
			$('#peopleSpeciesTableID').DataTable( {
				"order": [[0, "asc" ]],
				 "iDisplayLength": 100
			} );
		} );
				
	</script>
	
  </head>
  <body>


    <div class=" container-fluid col-10">
      <a href=./index.html>Home</a>
      <div class="container col-10 ">
        <ul class="nav justify-content-center">
          <li class="nav-item"> <a class="nav-link" href=/admin>Admin</a> </li>
          <li class="nav-item"> <a class="nav-link" href=/match> Match </a></li>
		 
		   
        </ul>
     </div>

 

     <div class="row">
       <div class="container" style="text-align:center">
	 
		 
         <div id="Admin">
           <button type="button" class="btn btn-outline-secondary"> <a href='../animal'> Animal </a> </button>
           <div class="btn-group" role="group">
             <button id="btnGroupDropPeople" type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
               People
             </button>
             <div class="dropdown-menu" aria-labelledby="btnGroupDropPeople">
               <a class="dropdown-item" href='../people'> Person </a>
               <a class="dropdown-item" href='../people_location'> People_Location </a>
               <a class="dropdown-item" href='../people_species'> People_Species </a>
             </div>
           </div>
           <button type="button" class="btn btn-outline-secondary"> <a href='../location'> Location </a> </button>
           <button type="button" class="btn btn-outline-secondary"> <a href='../species'> Species </a> </button>

           <br>
         </div>
       </div>
     </div>

	  


      <!-- Modal -->
      <div class="modal fade" id="PeopleSpeciesAddModal" tabindex="-1" role="dialog" aria-labelledby="peopleSpeciesAddModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-body">
              <div id="PeopleSpeciesAdd">

                <form action="/people_species" method="post">

				     <div class="form-group">
                    <label for="names">Person Name (last, first): </label>
                    <select class="form-control" id="id_peopleSpecNameAdd"  name="nm_peopleSpecNameAdd" >
                       {{#each full_names}}
						<option> {{FULL_NAME}}</option>
					 {{/each}}
                    </select>
                  </div>

				     <div class="form-group">
                    <label for="zipCodes">Species Choices: </label>
                    <select multiple class="form-control" id="id_peopleSpeciesNameAdd"  name="nm_peopleSpeciesNameAdd" >
                       {{#each species_names}}
						<option> {{SPECIES_NAME}}</option>
					 {{/each}}
                    </select>
                  </div>


                  <input type="submit" value="Add Species to Person"></input>


                </form>
              </div>
            </div>
          </div>
        </div>
      </div>


<div>
<br>
<h3>People and Their Selected Species: </h3>
<br>

	     <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#PeopleSpeciesAddModal">
        Add
      </button>
<br>
</div>
<br>


<table id = "peopleSpeciesTableID" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%" >
	<thead> 
		<th>PEOPLE_SPECIES_ID </th>
		<th>PEOPLE_ID </th>
		<th>First Name </th>
		<th>Last Name </th>
		<th>SPECIES_ID </th>
		<th>Species Name </th>
		<th>Delete </th>		
	</thead> 
	<tbody>
		{{#each people_species}} 
		<tr> 
			<td>{{PEOPLE_SPECIES_ID}}</td>
			<td>{{PEOPLE_ID}}</td>
			<td>{{FIRST_NAME}}</td> 
			<td>{{LAST_NAME}}</td> 
			<td>{{SPECIES_ID}}</td> 
			<td>{{SPECIES_NAME}}</td> 
			<td><button  class="btn btn-danger" onclick="deletePeopleSpecies({{PEOPLE_ID}},  {{SPECIES_ID}})">Delete</button></td>
		</tr> 
		{{/each}} 
	</tbody> 
</table> 

      <div class="container col-lg-3"></div>

     <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	  
	  <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
	  <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
	  <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>	  
	  
	  
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    </body>
  </html>
