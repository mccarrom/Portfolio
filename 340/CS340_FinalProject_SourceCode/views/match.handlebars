<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Make a match</title>
	
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">	
	<link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">	
	
	
	<script src = "filterMatchTables.js"> </script>
	
	<script>
	
		$(document).ready(function() {
			$('#matchPeopleTable_ID').DataTable( {
				"order": [[ 1, "desc" ]],
				 "iDisplayLength": 100,
				  "bPaginate": false,
					"bFilter": false,
					"bInfo": false
			} );
		} );
				
	</script>
	
		
	<script>
	
		$(document).ready(function() {
			$('#matchAnimalTable_ID').DataTable( {
				"order": [[ 1, "desc" ]],
				 "iDisplayLength": 100,
				  "bPaginate": false,
					"bFilter": false,
					"bInfo": false
			} );
		} );
				
	</script>


  </head>
  
  <body>
    <a href=./index.html>Home</a>
    <div class="row">
      <div class="container col-10 ">
        <ul class="nav justify-content-center">
           <li class="nav-item"> <a class="nav-link" href=/admin>Admin</a> </li>
          <li class="nav-item"> <a class="nav-link" href=/match> Match </a></li>
        </ul>
      </div>
    </div>
	
	 <div class=" container col-lg-3">
    </div>


	<div class="container">
	  <div class="row">
		<div class="col-sm">
		<h3>Matching Pets with People  </h3> </div> </div>  </div>
		<br>
	
		

	
	<div class="container">
	  <div class="row">
		<div class="col-sm">
		
				<!--<form action="/match" method="get">-->
				
					  <h5> Select Zip Code and Species: </h5>
					  
					  	<div class="form-group">
							<label for="ZipCode">Zip Code: </label>
							   <select class="browser-default custom-select" data-live-search="true" id="id_matchZipCode" name = "nm_matchZipCode">
							   <option id = "chooseZipCodeID" selected>Choose Zip Code Here: </option> 
								 {{#each zip_codes}} 
									<option value='{{ZIP_CODE}}'>{{ZIP_CODE}}</option> 
								{{/each}} 
							</select>
						  </div> 
						  
						  <div class="form-group">
							<label for="Species">Species: </label>
							<select class="browser-default custom-select" id="id_matchSpecies" name = "nm_matchSpecies">
								<option id = "chosenSpeciesID" selected>Choose Species Here: </option> 
								 {{#each species_names}} 
									<option value='{{SPECIES_NAME}}'>{{SPECIES_NAME}}</option> 
								{{/each}} 
							</select>	
						  </div>
							
						 <!--<input type="submit" value="Find Matches!"></input>-->
						  
						  <button class="btn btn-primary" onclick="filterMatchTables()">Find Matches!</button>
						  <br>
						  <br>
						  <p> <i> If no rows return in either table, then there were no matches for this particular species and zip code combination. </i> </p>
						  <br>
				<!--</form>-->
			</div>
		</div>
	</div>
	

	<div class="container">	
		<div class="row">
		
			<div class="col-lg-6">
			<h4 class="sub-header">Matched People</h4>
				<table class="table" id = "matchPeopleTable_ID">
				  <thead>
					<tr>
					  <th> First Name</th>
					  <th> Last Name</th>
					  <th id = "peopleSpeciesHeader" style="display: none;"> </th>
					  <th id = "animalZipCodeHeader" style="display: none;"> </th>
					</tr>
				  </thead>
				  <tbody>
					{{#each people}}
					<tr>
						<td>{{FIRST_NAME}}</td>
						<td>{{LAST_NAME}}</td>						
						<td id="peopleSpeciesRow" style="display: none;">  {{SPECIES_NAME}}</td>
						<td id="peopleZipCodeRow" style="display: none;">  {{ZIP_CODE}}</td>
					</tr>
					{{/each}}
				  </tbody>
				</table>
			  </div>	
	
			<div class="col-lg-6">
				<h4 class="sub-header">Matched Animals</h4>
				<table class="table" id = "matchAnimalTable_ID">
				  <thead>
					<tr>
					  <th> Name </th>
					  <th> Age </th>
					  <th> Weight </th>
					  <th id = "animalSpeciesHeader"style="display: none;"> </th>
					  <th id = "animalZipCodeHeader"style="display: none;"> </th>
					</tr>
				  </thead>
				  <tbody>
					  {{#each animals}}
					  <tr>
						<td>{{NAME}}</td>
						<td>{{AGE}}</td>
						<td>{{WEIGHT}}</td>
						<td id="animalSpeciesName" style="display: none;">  {{SPECIES_NAME}}</td>
						<td id="animalZipCodeRow" style="display: none;">  {{ZIP_CODE}}</td>
					  </tr>
					  {{/each}}
				  </tbody>
				</table>
			  </div>
			  
			</div>
		</div>
		
		      <div class="container col-lg-3">
      </div>
	
   

         <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>  
	  
	  <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
	  <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
	  <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>	  
	  
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>
