
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Location Admin</title>
	
	<!-- SOURCE FOR DATA TABLE FILES : https://datatables.net/examples/styling/bootstrap4 -->
	
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">	
	<link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">	
	
	<script>
	
		$(document).ready(function() {
			$('#locationTableID').DataTable( {
				"order": [[ 3, "desc" ]],
				 "iDisplayLength": 100
			} );
		} );
				
	</script>
	
	
  </head>

  <body>
    <div class=" container col-lg-3">
    </div>

    <div class=" container-fluid col-lg-6">
      <a href=./index.html>Home</a>
      <div class="container col-10 ">
        <ul class="nav justify-content-center">
          <li class="nav-item"> <a class="nav-link" href=/admin>Admin</a> </li>
          <li class="nav-item"> <a class="nav-link" href=/match> Match </a></li>
        </ul>
      </div>

      <div class="row">
        <div class="container" style="text-align:center">
			  
						   
          <div id="Admin">
            <button type="button" class="btn btn-outline-secondary"> <a href='../animal'> Animal </a> </button>
            <div class="btn-group" role="group">
              <button id="btnGroupDropPeople" type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                People
              </button>
              <div class="dropdown-menu" aria-labelledby="btnGroupDropPeople">
                <a class="dropdown-item" href='../people'> Person </a>
                <a class="dropdown-item" href='../people_location'> People_Location </a>
                <a class="dropdown-item" href='../people_species'> People_Species </a>
              </div>
            </div>
            <button type="button" class="btn btn-outline-secondary"> <a href='../location'> Location </a> </button>
            <button type="button" class="btn btn-outline-secondary"> <a href='../species'> Species </a> </button>



            <br>
          </div>
        </div>
						   
			  
      </div>
      <div class="modal fade" id="LocationAddModal" tabindex="-1" role="dialog" aria-labelledby="locationAddModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-body">

          	  <div id="locationAdd">

          		<form action="/location" method="post">

          		  <h4> Zip Code Add </h4>
          		  <div class="form-group">
          			<label for="zipCode">Zip Code</label>
          			<input type="text" class="form-control" id="id_location_zipCodeAdd"   name="nm_location_zipCodeAdd"   placeholder="#####">
          		  </div>

          		    <h4> City Add </h4>
          		  <div class="form-group">
          			<label for="cityName">City Name</label>
          			<input type="text" class="form-control" id="id_location_cityAdd"   name="nm_location_cityAdd"   placeholder="NEW YORK">
          		  </div>


          		    <h4> State Add </h4>
          		  <div class="form-group">
          			<label for="stateName">State Name</label>
          			<input type="text" class="form-control" id="id_location_stateAdd"   name="nm_location_stateAdd"   placeholder="NY">
          		  </div>

          		  <input type="submit" value="Add Location"></input>
          		</form>
          	</div>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="LocationUpdateModal" tabindex="-1" role="dialog" aria-labelledby="locationUpdateModal" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-body">
            <div id="LocationUpdate">
             <form action="#" method="get">
              <fieldset>
                <!--update form here -->
               </form>
             </div>
           </div>
         </div>
       </div>
     </div>

<div>
<br>
	<h3>Locations</h3>
	<br>
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#LocationAddModal">
    Add
  </button>
<br>
</div>
<br>


  <table id = "locationTableID" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%" >
    <thead>
      <th>Location ID</th>
      <th>Zip Code </th>
      <th>City </th>
      <th>State </th>
      <th> Delete </th>
    </thead>
    <tbody>
      {{#each location}}
      <tr>
        <td>{{LOCATION_ID}}</td>
        <td>{{ZIP_CODE}}</td>
        <td>{{CITY}}</td>
        <td>{{STATE}}</td>
		<td><button class="btn btn-danger"  onclick="deleteLocation({{LOCATION_ID}})">Delete</button></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  	  
